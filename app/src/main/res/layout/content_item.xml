<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_content_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:text="@string/item_name"
        android:textColor="@color/grey_33"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/main_content_item_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_content_item_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:text="@string/item_account"
        android:textColor="@color/grey_33"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/main_content_item_name"
        app:layout_constraintStart_toStartOf="@id/main_content_item_name"
        app:layout_constraintTop_toBottomOf="@id/main_content_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>